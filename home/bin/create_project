#!/bin/bash

set -o pipefail
set -o errexit
set -o nounset

create_project() {
    local repo_name="$1"
    local dir_name=`basename $(pwd)`

    if [ "$repo_name" = "" ]; then
        echo -n "  Repo name (hit enter to use '$dir_name')?"
        read repo_name
    fi

    if [ "$repo_name" = "" ]; then
        repo_name=$dir_name
    fi

    local project_root="$HOME/prog"
    echo "Creating project at $project_root/$repo_name"
    local project_abs_path="$project_root/$repo_name"
    mkdir "$repo_name"
    cd "$repo_name"
    git init
    touch README.md
    git add README.md
    git commit -m "initial commit"
}

create_project "$@"
